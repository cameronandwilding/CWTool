<?php

namespace Drupal\checklist\Form;

use Drupal\Core\Config\ConfigFactory;
use Drupal\Core\Config\Context\ContextInterface;
use Drupal\Core\Form\ConfigFormBase;
use Symfony\Component\DependencyInjection\ContainerInterface;


class ChecklistSettingsForm extends ConfigFormBase {

  /**
   * Constructs a \Drupal\checklist\Form\checklistSettingsForm object.
   *
   * @param \Drupal\Core\Config\ConfigFactory $config_factory
   *   The configuration context to use.
   */
  public function __construct(ConfigFactory $config_factory) {
    parent::__construct($config_factory);
  }

  public static function create(ContainerInterface $container) {
    return new static($container->get('config.factory'));
  }

  public function getFormID() {
    return 'checklist.admin.settings';
  }

  public function buildForm(array $form, array &$form_state) {
    $active = array(0 => t('Unchecked'), 1 => t('Checked'));
    $config = $this->configFactory->get('checklist.settings');
    $checklist_radio = $config->get('checklist_radio');
    $form['radio_one'] = array(
      '#type' => 'radio',
      '#title' => t('radio one'),
      '#default_value' => $checklist_radio,
      '#options' => $active,
    );

    $form['radio_two'] = array(
      '#type' => 'radio',
      '#title' => t('radio two'),
      '#default_value' => $checklist_radio,
      '#options' => $active,
    );

    $form['radio_three'] = array(
      '#type' => 'radio',
      '#title' => t('radio three'),
      '#default_value' => $checklist_radio,
      '#options' => $active,
    );

    $form['radio_four'] = array(
      '#type' => 'radio',
      '#title' => t('radio four'),
      '#default_value' => $checklist_radio,
      '#options' => $active,
    );

    return parent::buildForm($form, $form_state);
  }

  public function submitForm(array &$form, array &$form_state) {
    $this->configFactory->get('checklist.settings')
      // Remove unchecked types.
      ->set('child_type', $form_state['values']['radio_one'])
      ->save();

    parent::submitForm($form, $form_state);
  }

}

?>